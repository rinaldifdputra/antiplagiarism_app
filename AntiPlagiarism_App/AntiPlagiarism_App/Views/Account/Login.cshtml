@model AntiPlagiarism_App.ViewModels.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<!-- Mirrored from demos.ui-lib.com/gull-html/signin.html by HTTrack Website Copier/3.x [XR&CO'2014], Mon, 14 Jan 2019 03:30:11 GMT -->
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Anti Plagiarism - LEMHANNAS</title>
    <link rel="icon" type="image/x-icon" href="@Url.Content("~/Content/assets/images/5dc589ab1e03b.16px.ico")" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:300,400,400i,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="@Url.Content("~/Content/assets/styles/css/themes/lite-purple.min.css")">
</head>
<body>
    <div class="auth-layout-wrap" style="background-image: url(@Url.Content("~/Content/assets/images/32aa8664844a3edef034b2b12b1cf060.jpg"))">
        <div class="auth-content">
            <div class="card o-hidden">
                <div class="row">
                    <div class="col-md-5 text-center">
                        <img src="@Url.Content("~/Content/assets/images/1813_LOGO_Lemhannas_2013.jpg")" />
                    </div>

                    <div class="col-md-7">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <br />
                            if (!String.IsNullOrEmpty(ViewBag.Warning))
                            {
                                <div class="alert alert-danger">

                                    @if (ViewBag.Warning == "Warning")
                                    {
                                        <text>Username / Password Tidak Dikenal !!!</text>
                                    }
                                    else
                                    {
                                        @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                    }
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            }
                            <div class="p-4">

                                <h5><b>LEMBAGA KETAHANAN NASIONAL R.I</b></h5>
                                <div class="form-group">
                                    <label for="email">Username</label>
                                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                </div>
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", type = "password", @required = "required" } })
                                </div>
                                <button class="btn btn-rounded btn-primary btn-block mt-2" type="submit">Sign In</button>
                                <div class="mt-3 text-center">
                                    <a href="#" class="text-muted"><u>Forgot Password?</u></a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="@Url.Content("~/Content/assets/js/vendor/jquery-3.3.1.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/js/vendor/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/js/es5/script.min.js")"></script>
</body>
