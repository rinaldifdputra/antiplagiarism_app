@model AntiPlagiarism_App.Models.user

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-10">
                <div class="card-body">
                    <div class="card-title mb-10">Tambah User</div>
                    <div class="separator-breadcrumb border-top"></div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @if (!String.IsNullOrEmpty(ViewBag.Warning))
                    {
                    <div class="alert alert-danger">

                        @if (ViewBag.Warning == "Warning")
                        {
                            <text>Username sudah pernah terdaftar</text>
                        }
                        else
                        {
                            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                            @Html.ValidationMessageFor(model => model.roleID, "", new { @class = "text-danger" })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                            @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                            @Html.ValidationMessageFor(model => model.active, "", new { @class = "text-danger" })
                        }
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    }
                    <div class="form-group">
                        <table>
                            <tr>
                                <td>Username</td>
                                <td>:</td>
                                <td>
                                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                </td>
                            </tr>
                            <tr>
                                <td>Password</td>
                                <td>:</td>
                                <td>
                                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", type = "password", @required = "required" } })
                                </td>
                            </tr>
                            <tr>
                                <td>Role</td>
                                <td>:</td>
                                <td>
                                    @Html.DropDownList("roleID", null, "-- Pilih Role --", htmlAttributes: new { @class = "form-control", @required = "required" })
                                </td>
                            </tr>
                            <tr>
                                <td>Email</td>
                                <td>:</td>
                                <td>
                                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                </td>
                            </tr>
                            <tr>
                                <td>Phone</td>
                                <td>:</td>
                                <td>
                                    @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                </td>
                            </tr>
                            <tr>
                                <td>Status</td>
                                <td>:</td>
                                <td>
                                    @Html.RadioButtonFor(model => model.active, 1, new { htmlAttributes = new { @class = "form-control" } }) Aktif
                                    @Html.RadioButtonFor(model => model.active, 0, new { htmlAttributes = new { @class = "form-control" } }) Non Aktif
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td>
                                    <input type="submit" value="Simpan" class="btn btn-success" />
                                    <a href="@Url.Action("Index","Users")" class="btn btn-warning">Kembali</a>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

