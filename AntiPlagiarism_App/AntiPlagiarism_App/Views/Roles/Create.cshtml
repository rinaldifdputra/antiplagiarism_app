@model AntiPlagiarism_App.Models.role

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="card-title mb-4">Tambah Role</div>
                    <div class="separator-breadcrumb border-top"></div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <table>
                            <tr>
                                <td>Role</td>
                                <td>:</td>
                                <td>
                                    @Html.EditorFor(model => model.roleNm, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                    @Html.ValidationMessageFor(model => model.roleNm, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td>
                                    <input type="submit" value="Simpan" class="btn btn-success" />
                                    <a href="@Url.Action("Index","Roles")" class="btn btn-warning">Kembali</a>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

